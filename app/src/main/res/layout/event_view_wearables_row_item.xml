<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/eventViewWearablesRowItemLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:foreground="@drawable/item_ripple"
            android:padding="10dp">

            <ImageView
                android:id="@+id/eventViewWearablesRowItemImageView"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="start|center_vertical"
                android:layout_weight="1"
                tools:srcCompat="@android:drawable/alert_dark_frame" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:divider="@drawable/divider"
                android:gravity="center_vertical|end"
                android:orientation="vertical"
                android:paddingHorizontal="10dp"
                android:paddingTop="10dp"
                android:showDividers="middle">

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:divider="@drawable/divider"
                    android:showDividers="middle">

                    <TableRow android:gravity="center">

                        <TextView
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:text="Price" />

                        <TextView
                            android:id="@+id/eventViewWearablesRowItemPriceTextView"
                            android:layout_column="1"
                            android:layout_weight="3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            tools:text="@tools:sample/last_names" />
                    </TableRow>

                    <TableRow android:gravity="center">

                        <TextView
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:text="Type" />

                        <TextView
                            android:id="@+id/eventViewWearablesRowItemTypeTextView"
                            android:layout_column="1"
                            android:layout_weight="3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            tools:text="@tools:sample/cities" />
                    </TableRow>

                    <TableRow android:gravity="center">

                        <TextView
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:text="Color" />

                        <TextView
                            android:id="@+id/eventViewWearablesRowItemColorTextView"
                            android:layout_column="1"
                            android:layout_weight="3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            tools:text="@tools:sample/first_names" />

                    </TableRow>

                    <TableRow android:gravity="center">

                        <TextView
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:text="Pattern" />

                        <TextView
                            android:id="@+id/eventViewWearablesRowItemPatternTextView"
                            android:layout_column="1"
                            android:layout_weight="3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            tools:text="@tools:sample/date/hhmm" />
                    </TableRow>

                    <TableRow android:gravity="center">

                        <TextView
                            android:layout_column="0"
                            android:layout_weight="1"
                            android:text="Purchase Date" />

                        <TextView
                            android:id="@+id/eventViewWearablesRowItemPurchaseDateTextView"
                            android:layout_column="1"
                            android:layout_weight="3"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            tools:text="@tools:sample/first_names" />
                    </TableRow>
                </TableLayout>
            </LinearLayout>

        </LinearLayout>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/eventViewWearablesDeleteButton"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="end"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/design_default_color_primary"
            android:src="@drawable/delete"
            app:tint="@color/design_default_color_on_primary" />
    </LinearLayout>


</androidx.cardview.widget.CardView>

